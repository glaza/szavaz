{
    "firestore": {
        "rules": "firestore.rules.json",
        "indexes": "firestore.indexes.json"
    },
    "hosting": {
        "public": "/dist/szavaz/browser",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "emulators": {
        "hosting": {
            "host": "localhost",
            "port": 4200
        }
    }
}
